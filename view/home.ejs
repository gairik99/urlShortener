<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
      }
    </style>
  </head>
  <body>
    <h1>url-shortener</h1>
    <% if (locals.id) { %>
    <p>URL Generated: http://localhost:8080/url/<%= id %></p>
    <% } %>
    <div>
      <form action="/url" method="POST">
        <label for="">Enter Your Url</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">generare</button>
      </form>
      <div>
        <% if (locals.urls) { %>
        <table>
          <tHead>
            <tr>
              <th>S. No</th>
              <th>shortId</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </tHead>
          <tbody>
            <% urls.forEach((url,index) => { %>
            <tr>
              <td><%=index+1 %></td>
              <td><%=url.shortId %></td>
              <td><%=url.redirectUrl %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
